pipeline {
    agent any
    tools {
        maven "Apache Maven 3.3.9"
    }

    stages {
        stage('Compile') {
            steps {
                echo 'Building...'
                sh 'mvn -f rest-api/REST-API/pom.xml clean compile'
            }
        }
        stage('Static Code Analisys') {
            steps {
                echo 'Building...'
                sh 'mvn -f rest-api/REST-API/pom.xml sonar:sonar'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'mvn -f rest-api/REST-API/pom.xml test'
            }
        }
    }
}
