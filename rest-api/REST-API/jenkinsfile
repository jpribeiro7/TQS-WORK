pipeline {
    agent any
    tools {
        maven "Apache Maven 3.3.9"
    }

    stages {
        stage('Compile') {
            steps {
                echo 'Building..'
                dir 'REST-API'
                sh 'pwd'
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                dir 'REST-API'
                sh 'pwd'
                sh 'mvn test'
            }
        }
    }
}
