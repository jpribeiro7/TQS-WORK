pipeline {
    agent any
    tools {
        maven "Apache Maven 3.3.9"
    }

    stages {
        stage('Compile') {
            steps {
                echo 'Building...'
                sh 'mvn -f REST-API/pom.xml clean compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                dir 'REST-API'
                sh 'mvn -f REST-API/pom.xml test'
            }
        }
    }
}
